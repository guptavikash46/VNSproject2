<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerOne"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/screenShotBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take screenshot"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/spinnerTwo"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/displayRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See records"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/spinnerTwo"
        android:onClick="displayFiles"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/screenShotBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


</RelativeLayout>